{
    "compilerOptions": {
      "target": "ES2020", 
      "module": "ESNext",
      "lib": ["DOM", "ES2020"],
      "jsx": "react-jsx",
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "strict": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }